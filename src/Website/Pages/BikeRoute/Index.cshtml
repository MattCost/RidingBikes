@page
@namespace RidingBikes.Website.Pages.BikeRoute
@model IndexPageModel
@{
    ViewData["Title"] = "Route Listing";
}

<h3>Hello World</h3>
@foreach(var route in Model.routes)
{
    @Html.DisplayFor(modelItem => route,"BikeRoutes/Overview")
    <div class="row">
        <a asp-page="Edit" asp-route-id="@route.Id">Edit</a><br>
        <a asp-page="Details" asp-route-id="@route.Id">Details</a><br>
    </div>
}   